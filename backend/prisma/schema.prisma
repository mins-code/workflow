generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- Team & User Models ---
model Team {
  id          String    @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  members     User[]
  projects    Project[]
}

model User {
  id              String    @id @default(uuid())
  name            String
  email           String    @unique
  role            String    // e.g., "Developer", "Manager"
  skills          String    // Stores JSON like '{"react": 0.9}'
  availability    Float     
  maxHours        Float     
  assignedHours   Float     @default(0)
  
  password        String    @map("hashed_password")
  
  teamId          String?   // Optional teamId
  team            Team?     @relation(fields: [teamId], references: [id]) // Optional relationship
  
  tasks           Task[]
}

// --- Project & Task Models ---
model Project {
  id          String    @id @default(uuid())
  title       String
  goal        String
  deadline    DateTime
  status      String    @default("PLANNED") 
  
  teamId      String
  team        Team      @relation(fields: [teamId], references: [id])
  tasks       Task[]
}

model Task {
  id              String  @id @default(uuid())
  title           String
  description     String?
  estimatedHours  Float
  requiredSkills  String  // Stores JSON like '{"node": 0.8}'
  status          String  @default("TODO") 
  guidance        String? 
  
  projectId       String
  project         Project @relation(fields: [projectId], references: [id])
  
  assigneeId      String?
  assignee        User?   @relation(fields: [assigneeId], references: [id])
}